<% if current_user %>
<h3 class="pull-right">Organization: <%= @tenant.name %></h3>
<%= render 'coupons/list' %>
<% else %>
<div class="jumbotron">
  <h2></h2>
  <p class="lead">
  </p>
</div>
<div class="row">
  <div class="plans clearfix">
    <div class="col-lg-3 col-lg-offset-3 plan">
      <h2>Free Plan</h2>
      <div class="price pull-right">
        Price: Free
      </div>
      <div class="features">
        <ul>
          <li>1 Coupon a month</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
    <div class="col-lg-4 plan">
      <h2>Premium Plan</h2>
      <div class="price pull-right">
        Price: Custom Plan
      </div>
      <div class="features">
        <ul>
          <li class='extra'>Unlimited coupon uploads</li>
          <li>Responsive design</li>
          <li>Access anywhere</li>
        </ul>
      </div>
      <p>
        <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
      </p>
    </div>
  </div>
</div>
<% end %>
